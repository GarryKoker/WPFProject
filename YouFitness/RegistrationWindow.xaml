<Window x:Class="YouFitness.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouFitness"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Width="200" Height="25" Margin="0,0,0,10"/>
            <TextBlock Text="Фамилия:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="SurnameTextBox" Width="200" Height="25" Margin="0,0,0,10"/>
            <TextBlock Text="Номер телефона:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="PhoneNumberTextBox" Width="200" Height="25" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="25" Margin="0,0,0,15"/>
            <Button Content="Зарегистрироваться" Width="150" Height="30" Margin="0,0,0,10" Background="#4CAF50" Foreground="White" FontSize="14"/>
            <TextBlock HorizontalAlignment="Center" FontSize="12">
                <Run Text="Уже есть аккаунт? "/>
                <Hyperlink Foreground="#2196F3">Войти</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
